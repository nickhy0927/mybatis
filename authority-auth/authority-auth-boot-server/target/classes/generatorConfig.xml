<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<context id="DB2Tables" targetRuntime="MyBatis3Simple"
		defaultModelType="flat">
		<property name="beginningDelimiter" value="`" />
		<property name="endingDelimiter" value="`" />
		<!-- 生成的Java文件的编码 -->
		<property name="javaFileEncoding" value="UTF-8" />
		<!-- 格式化java代码 -->
		<property name="javaFormatter"
			value="org.mybatis.generator.api.dom.DefaultJavaFormatter" />
		<!-- 格式化XML代码 -->
		<property name="xmlFormatter"
			value="org.mybatis.generator.api.dom.DefaultXmlFormatter" />
		<!--插件：生成java中equals和hashcode方法 -->
		<!-- <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin" 
			/> -->
		<!--插件：在XXXExample类中生成大小写敏感的like方法 -->
		<plugin type="org.mybatis.generator.plugins.CaseInsensitiveLikePlugin" />
		<!--插件：为生成的Java model添加序列化接口，并生成serialVersionUID字段 -->
		<plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
		<!--插件：为生成的Java model创建一个toString方法 -->
		<plugin type="org.mybatis.generator.plugins.ToStringPlugin" />
		<plugin type="tk.mybatis.mapper.generator.MapperPlugin">
			<property name="mappers" value="com.core.utils.MyMapper" />
		</plugin>
		<!--数据库链接地址账号密码 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://127.0.0.1:3306/minipro" userId="root"
			password="root">
		</jdbcConnection>
		<!--生成Model类存放位置 -->
		<javaModelGenerator targetPackage="com.iss.platform.user.pojo"
			targetProject="src/main/java" />
		<!--生成映射文件存放位置 -->
		<sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources" />
		<!--生成Dao类存放位置 ANNOTATEDMAPPER -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.iss.platform.user.dao" targetProject="src/main/java" />
		<!--生成对应表及类名 -->
		<!--mysql 配置 -->
		<!-- <table tableName="t_p_user" domainObjectName="User">
			<generatedKey column="id" sqlStatement="Mysql" identity="true" />
		</table>
		<table tableName="t_p_role" domainObjectName="Role">
			<generatedKey column="id" sqlStatement="Mysql" identity="true" />
		</table> -->
		<table tableName="t_p_menu" domainObjectName="Menu"
			enableCountByExample="true" enableUpdateByExample="true"
			enableDeleteByExample="true" enableSelectByExample="true"
			selectByExampleQueryId="true">
			<generatedKey column="id" sqlStatement="Mysql" identity="true" />
		</table>
	</context>
</generatorConfiguration>