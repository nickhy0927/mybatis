	<error-page>
		<error-code>404</error-code>
		<location>/error404.do</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error404.do</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/error404.do</location>
	</error-page>
	<error-page>
		<error-code>505</error-code>
		<location>/error404.do</location>
	</error-page>
	<!-- 配置session存在时间 -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
</web-app>