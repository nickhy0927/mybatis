<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.platform.rolemenu.entity.RoleMenu">
	<insert id="insert" parameterType="com.mybatis.platform.rolemenu.entity.RoleMenu">
		insert into sys_role_menu(
				id,
				create_time,
				update_time,
				status,
				role_id,
				menu_id
		)
		values (
				#{id},
				#{createTime},
				#{updateTime},
				#{status},
				#{roleId},
				#{menuId}
		)
	</insert>

	<delete id="delete" parameterType="java.lang.String">
		delete from sys_role_menu where id = #{roleMenuId}
	</delete>

	<delete id="deleteBatch" parameterType="java.util.List">
		delete from sys_role_menu where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{roleMenuId}
		</foreach>
	</delete>

	<update id="update" parameterType="com.mybatis.platform.rolemenu.entity.RoleMenu">
		update sys_role_menu 
		<trim prefix="set" suffixOverrides=",">
			<if test="id != null">id = #{id},</if>
			<if test="createTime != null">create_time = #{createTime},</if>
			<if test="updateTime != null">update_time = #{updateTime},</if>
			<if test="status != null">status = #{status},</if>
			<if test="roleId != null">role_id = #{roleId},</if>
			<if test="menuId != null">menu_id = #{menuId},</if>
		</trim>	
	</update>

	<select id="get" parameterType="String" resultType="com.mybatis.platform.rolemenu.entity.RoleMenu">
		select 
				id,
				create_time,
				update_time,
				status,
				role_id,
				menu_id
		from sys_role_menu where id = #{roleMenuId}
	</select>

	<select id="queryAll" parameterType="String" resultType="com.mybatis.platform.rolemenu.entity.RoleMenu">
		select * from sys_role_menu
	</select>

	<select id="queryListByMap" parameterType="java.util.Map" resultType="com.mybatis.platform.rolemenu.entity.RoleMenu">
		select 
				id,
				create_time,
				update_time,
				status,
				role_id,
				menu_id
		from sys_role_menu
			where 1 = 1 
			<include refid="conditions" />
	</select>

	<select id="queryPageByMap" parameterType="java.util.Map" resultType="com.mybatis.platform.rolemenu.entity.RoleMenu">
		select 
				id,
				create_time,
				update_time,
				status,
				role_id,
				menu_id
		from sys_role_menu
			where 1 = 1 
			<include refid="conditions" />
		order by
            <choose>
                <when test="order != null">${order} ${sort}</when>
                <when test="order != null">create_time desc</when>
            </choose>
        limit #{startRow}, #{size}
	</select>

	<sql id="conditions">
		<trim prefix="where" prefixOverrides="and|or">
			<if test="id != null">and id = #{id}</if>
			<if test="createTime != null">and create_time = #{createTime}</if>
			<if test="updateTime != null">and update_time = #{updateTime}</if>
			<if test="status != null">and status = #{status}</if>
			<if test="roleId != null">and role_id = #{roleId}</if>
			<if test="menuId != null">and menu_id = #{menuId}</if>
		</trim>
	</sql>
</mapper>
